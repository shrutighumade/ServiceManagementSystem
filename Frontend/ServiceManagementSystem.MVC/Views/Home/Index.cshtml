@model List<ServiceManagementSystem.MVC.Models.ServiceViewModel>
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to Service Management System</h1>
    <p class="lead">Find and book professional services in your area</p>
    <a asp-controller="Services" asp-action="Index" class="btn btn-primary btn-lg">Browse Services</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-12">
            <h2>Featured Services</h2>
        </div>
    </div>
    
    <div class="row">
        @foreach (var service in Model.Take(6))
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">@service.Category</p>
                        <p class="card-text">@service.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary">$@service.Price.ToString("F2")</span>
                            <span class="text-muted">@service.DurationMinutes min</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" class="btn btn-outline-primary">View Details</a>
                        <a asp-controller="Services" asp-action="Book" asp-route-id="@service.Id" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="text-center mt-4">
        <a asp-controller="Services" asp-action="Index" class="btn btn-outline-primary">View All Services</a>
    </div>
}
else
{
    <div class="text-center">
        <h3>No services available at the moment.</h3>
        <p>Please check back later or contact our support team.</p>
    </div>
}
