@model List<ServiceManagementSystem.MVC.Models.ServiceViewModel>
@{
    ViewData["Title"] = "Services";
}

<div class="row">
    <div class="col-12">
        <h1>Available Services</h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-primary")">All Services</a>
            @foreach (var category in ViewBag.Categories)
            {
                <a asp-action="Index" asp-route-category="@category" class="btn @(ViewBag.SelectedCategory == category ? "btn-primary" : "btn-outline-primary")">@category</a>
            }
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">
                            <span class="badge bg-secondary">@service.Category</span>
                        </p>
                        <p class="card-text">@service.Description</p>
                        @if (service.Provider != null)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <strong>Provider:</strong> @service.Provider.BusinessName<br>
                                    <strong>Rating:</strong> @service.Provider.Rating.ToString("F1") ‚≠ê (@service.Provider.TotalReviews reviews)
                                </small>
                            </p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary">$@service.Price.ToString("F2")</span>
                            <span class="text-muted">@service.DurationMinutes min</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-outline-primary">View Details</a>
                        <a asp-action="Book" asp-route-id="@service.Id" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <h3>No services found.</h3>
        <p>Please try a different category or check back later.</p>
    </div>
}
